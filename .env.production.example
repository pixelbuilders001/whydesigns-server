# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to git!

# Server Configuration
NODE_ENV=production
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this
JWT_EXPIRE=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# CORS Configuration
# Set to your frontend domain in production
CORS_ORIGIN=https://whydesigners.com,https://www.whydesigners.com,https://admin.whydesigners.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1

# AWS S3 Bucket
AWS_S3_BUCKET_NAME=why-designers

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=why-designers-prod

# AWS SES Configuration (Email Service)
AWS_SES_FROM_EMAIL=noreply@whydesigners.com
AWS_SES_REGION=ap-south-1

# Frontend URL (for email links)
FRONTEND_URL=https://whydesigners.com

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Logging Level
LOG_LEVEL=info

# Security Headers
HELMET_ENABLED=true

# Additional Security
TRUST_PROXY=true
